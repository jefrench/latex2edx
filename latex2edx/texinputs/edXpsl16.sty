\parindent 0.25in
\abovecaptionskip 0.50em
\belowcaptionskip -0.15em
\RenewDocumentCommand \floatpagefraction { } {.9}
\RenewDocumentCommand \topfraction { } {.9}
\RenewDocumentCommand \bottomfraction { } {.9}
\RenewDocumentCommand \textfraction { } {.1}

\ExplSyntaxOff
\makeindex

